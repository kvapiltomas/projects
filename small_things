collection = {
    'movie1':{
    'name':'Kmotr',
    'year':'1995',
    'director':'Lebowski'
},
    'movie2':{
    'name':'Panda',
    'year':'2011',
    'director':'John'
},
    'movie3':{
    'name':'Matrix',
    'year':'2000',
    'director':'Wachow'
    }
}


movie_collection = []


def menu():
  user_input = input('select a/l/f:')
  
  while user_input != 'q':
    if user_input == 'a':
      add_movie()
    elif user_input == 'l':
      show_collection()
    elif user_input == 'f':
      find_movie()
    else:
      print('wrong input')
    
    user_input = input("\nSelect a/l/f: ")


def add_movie():
  movie=input('name of a movie:')
  director = input('director:')
  year=int(input('year:'))
  
  movie_collection.append({
      'name':movie,
      'year':year,
      'director':director              
      })

  
def show_collection(): 
    for movie in movie_collection:
        show_movie_details(movie)       


def show_movie_details(movie):
    print(f"NAME: {movie['name']}")
    print(f"DIRECTOR: {movie['director']}")
    print(f"YEAR: {movie['year']}")


def find_movie():
    find_by= input('What property are you looking for? ')
    looking_for= input('what are you looking for? ')

    movies = find_by_att(looking_for, lambda x: x[find_by])

def find_by_att(expected, finder):
    found= []

    for movie in movies:
        if finder[find_by] == expected:
            found.append(movie)
        return found


menu()

