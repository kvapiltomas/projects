my_students = {'name':'Peter',
               'grades':{5,1,5},
              'name':'Joseph',
               'grades':{3,1,4}
              }
def avg_grade(student):
    for name in student:
      return sum(student['grades'])/len(student['grades'])
    

avg_grade(my_students)
